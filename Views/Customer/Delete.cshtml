@model LibraryManagement.ViewModels.CustomerViewModel
@{
    Layout = "_Layout";
}

<h2>Delete Customer</h2>

<!-- warning text -->
<p class="error-message">
    ðŸš¨ Are you sure you want to delete this customer? ðŸš¨
</p>

<!-- customer info -->
<div style="margin: 1rem 0;">
    <strong>Name:</strong> @Model.Name
</div>
<div style="margin: 1rem 0;">
    <strong>Email:</strong> @Model.Email
</div>
<div style="margin: 1rem 0;">
    <strong>Phone:</strong> @Model.Phone
</div>

<!-- CTA buttons -->
<form asp-action="DeleteConfirmed" method="post" style="margin-top: 2rem;">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />

    <button type="submit" class="btn btn-warning" style="color: white;">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary" style="margin-left: 0.5rem;">Cancel</a>
</form>