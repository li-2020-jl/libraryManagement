@model LibraryManagement.ViewModels.CustomerViewModel
@{
    Layout = "_Layout";
}

<h2><i data-lucide="alert-circle"></i> Delete Customer</h2>

<!-- warning text -->
<p class="error-message">
    <i data-lucide="alert-triangle"></i> Are you sure you want to delete this customer?
</p>

<!-- customer info -->
<div style="margin: 1rem 0;">
    <strong>Name:</strong> @Model.Name
</div>
<div style="margin: 1rem 0;">
    <strong>Email:</strong> @Model.Email
</div>
<div style="margin: 1rem 0;">
    <strong>Phone:</strong> @Model.Phone
</div>

<!-- CTA buttons -->
<form asp-action="DeleteConfirmed" method="post" style="margin-top: 2rem;">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />

    <button type="submit" class="btn btn-danger"><i data-lucide="trash-2"></i> Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary" style="margin-left: 0.5rem;"><i data-lucide="x"></i> Cancel</a>
</form>