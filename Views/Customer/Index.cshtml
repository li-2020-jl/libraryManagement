@model List<LibraryManagement.ViewModels.CustomerViewModel>
@using System.Security.Claims;

@{
    Layout = "_Layout";
    var currentUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<h1><i data-lucide="users"></i> Customer List</h1>

<div class="markdown-table-container">
    <table class="markdown-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Borrowed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                bool isCurrentUser = customer.CustomerId == currentUserId;

                <tr>
                    <td style="word-break: break-all;">@customer.CustomerId</td>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-blue btn-sm">
                            @customer.BorrowedBooks
                        </a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn @(isCurrentUser ? "btn-warning" : "btn-outline")">
                            <i data-lucide="@(isCurrentUser ? "book-minus" : "eye")"></i> @(isCurrentUser ? "Return Books" : "View Books")
                        </a>
                        @if (isCurrentUser)
                        {
                            @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                            {
                                { "Icon", "edit" },
                                { "Text", "Edit" },
                                { "ActionName", "Edit" },
                                { "RouteId", customer.CustomerId },
                                { "StyleType", "table-primary" },
                                { "Color", "blue" }
                            })
                            @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                            {
                                { "Icon", "trash-2" },
                                { "Text", "Delete" },
                                { "ActionName", "Delete" },
                                { "RouteId", customer.CustomerId },
                                { "StyleType", "table-secondary" },
                                { "Color", "red" }
                            })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>