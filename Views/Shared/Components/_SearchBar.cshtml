@* Search Bar Component
   Parameters:
   - placeholder: string (e.g., "Search by book title")
   - searchValue: string (current search term)
   - actionName: string (default: "Index")
*@

@{
    var placeholder = ViewData["Placeholder"]?.ToString() ?? "Search";
    var searchValue = ViewData["SearchValue"]?.ToString() ?? "";
    var actionName = ViewData["ActionName"]?.ToString() ?? "Index";
}

<form asp-action="@actionName" method="get" style="margin-bottom: 1.5rem;">
    <div style="display: flex; align-items: center; gap: 8px;">
        <div style="position: relative; flex: 0 0 300px; height: 42px; display: flex; align-items: center;">
            <i data-lucide="search" style="position: absolute; left: 14px; color: #6b7280; width: 18px; height: 18px; pointer-events: none; z-index: 1;"></i>
            <input type="text"
                   name="search"
                   placeholder="@placeholder"
                   value="@searchValue"
                   style="padding: 0 14px 0 42px; border-radius: 6px; border: 1px solid #4b5563; background-color: #1f2937; color: #f9fafb; width: 100%; height: 100%; box-sizing: border-box; font-size: 14px; line-height: 42px;" />
        </div>
        <button type="submit" class="btn btn-outline" style="height: 42px; line-height: 1;">Search</button>
    </div>
</form>

