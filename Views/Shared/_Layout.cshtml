@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- GitHub Markdown (optional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.2.0/github-markdown-dark.min.css" />
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
    <div class="wrapper">
        <!-- NAVIGATION BAR -->
        <header>
            <nav class="navbar">
                <!-- Left Navigation Links -->
                <div style="display: flex; align-items: center; gap: 16px;">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-dark">Home</a>
                    <a asp-controller="Book" asp-action="Index" class="nav-link text-dark">Books</a>
                    <a asp-controller="Author" asp-action="Index" class="nav-link text-dark">Authors</a>
                    <a asp-controller="Customer" asp-action="Index" class="nav-link text-dark">Customers</a>
                    <a asp-controller="LibraryBranch" asp-action="Index" class="nav-link text-dark">Branches</a>
                    <a asp-controller="Home" asp-action="Chat" class="nav-link text-dark">Reader's ChatHub</a>

                    <a class="nav-link text-dark @(Context.Request.Path.StartsWithSegments("/swagger") ? "active" : "")"
                    href="/swagger" target="_blank">Swagger</a>
                </div>

                <!-- Right Account Links -->
                <div style="display: flex; align-items: center; gap: 10px;">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <!-- My Profile Link with Username -->
                        var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                        var userName = User.Identity?.Name ?? User.FindFirst("email")?.Value ?? "My Profile";
                        
                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "Controller", "Customer" },
                            { "ActionName", "Edit" },
                            { "RouteId", userId },
                            { "Icon", "user-circle" },
                            { "Color", "outline" },
                            { "Text", userName }
                        })

                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "JsFunction", "document.getElementById('logoutForm').submit();" },
                            { "Icon", "log-out" },
                            { "Color", "outline" },
                            { "Text", "Logout" }
                        })
                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display: none;">
                            @Html.AntiForgeryToken()
                        </form>
                    }
                    else
                    {
                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "Controller", "Account" },
                            { "ActionName", "Register" },
                            { "Icon", "user-plus" },
                            { "Color", "outline" },
                            { "Text", "Register" }
                        })

                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "Controller", "Account" },
                            { "ActionName", "Login" },
                            { "Icon", "log-in" },
                            { "Color", "blue" },
                            { "Text", "Login" }
                        })
                    }
                </div>
            </nav>
        </header>

        <!-- MAIN CONTENT -->
        <main class="content-wrapper">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="footer">
            <div class="text-center">© 2025 - Library Management</div>
        </footer>
    </div>

    <!-- JavaScript to dynamically redirect to Profile with returnUrl -->
    <script>
        const profileBtn = document.getElementById('profileLink');
        if (profileBtn) {
            profileBtn.addEventListener('click', () => {
                const currentUrl = window.location.pathname + window.location.search;
                window.location.href = `/Account/Profile?returnUrl=${encodeURIComponent(currentUrl)}`;
            });
        }
    </script>

    <!-- Initialize Lucide Icons -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
        });
    </script>

    <!-- Site JavaScript for Animations -->
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>