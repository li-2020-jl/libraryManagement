@model LibraryManagement.ViewModels.RegisterViewModel
@{
    Layout = "_Layout";
}

<h2 style="margin-bottom: 1.5rem;"><i data-lucide="user-plus"></i> Register</h2>

<form method="post" style="max-width: 500px;">
    <div style="margin-bottom: 1rem;">
        <label asp-for="Username"></label>
        <input asp-for="Username" type="text" required />
        <span asp-validation-for="Username" class="text-error"></span>
    </div>

    <div style="margin-bottom: 1rem;">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" required />
        <span asp-validation-for="Password" class="text-error"></span>
    </div>

    <div style="margin-bottom: 1rem;">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" required />
        <span asp-validation-for="ConfirmPassword" class="text-error"></span>
    </div>

    <div style="margin-bottom: 1rem;">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" required />
        <span asp-validation-for="Email" class="text-error"></span>
    </div>

    <div style="margin-bottom: 1rem;">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" type="text" required />
        <span asp-validation-for="PhoneNumber" class="text-error"></span>
    </div>

    @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
    {
        { "ButtonType", "submit" },
        { "Icon", "user-plus" },
        { "Color", "blue" },
        { "Text", "Register" },
        { "Style", "font-size: 16px; padding: 14px 28px;" }
    })
</form>

<hr style="margin: 2rem 0;" />

<div style="margin-bottom: 1rem;">
    <p><strong>Or register with a social account:</strong></p>
    <p style="font-size: 0.95rem; color: #9ca3af;">
        You can register using your <strong>Google</strong> or <strong>GitHub</strong> account.<br />
        Your email will be saved automatically after authentication.
    </p>
</div>

<form method="post" asp-action="ExternalLogin">
    <button type="submit" name="provider" value="Google" class="btn btn-outline"><i data-lucide="mail"></i> Register with Google</button>
    <button type="submit" name="provider" value="GitHub" class="btn btn-outline" style="margin-left: 0.5rem;"><i data-lucide="github"></i> Register with GitHub</button>
</form>