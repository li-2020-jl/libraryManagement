@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="content-wrapper text-center">

    <!-- banner image -->
    <img src="~/images/vancouver-public-library.jpg" alt="Vancouver Public Library"
         class="card-img" style="max-height: 400px; width: auto; margin-bottom: 2rem;" />

    <!-- welcome text -->
    <h1 style="font-size: 2.5rem; font-weight: bold;">
        Welcome to Library Vancouver
    </h1>
    <p class="text-muted" style="font-size: 1.2rem;">
        Read. Discover. Learn.
    </p>

    <!-- borrow a book -->
    <div style="margin-top: 3rem;">
        <a asp-controller="Book" asp-action="Index" class="btn btn-blue btn-lg">
            <i data-lucide="arrow-down-circle"></i> Borrow a Book
        </a>
    </div>

    <!-- a seperatin line here -->
    <hr style="margin: 3rem 0; border-color: #30363d;" />

    <!-- Reader's ChatHub Card -->
    <div class="row" style="justify-content: center;">
        <div class="col-4">
            <div class="card text-center" style="cursor: pointer;" onclick="location.href='@Url.Action("Chat", "Home")'">
                <img src="~/images/Artboard 60680x360px_Daphne@2x.png" alt="Chat Bot"
                     class="card-img" style="max-height: 200px; object-fit: contain;" />
                <h3 class="card-title" style="margin-top: 1rem;">Reader's ChatHub</h3>
                <p class="text-muted">Ask questions, get book help,<br />chat with other readers!</p>
                <span class="btn btn-outline btn-lg" style="pointer-events: none;"><i data-lucide="message-circle"></i> Chat now!</span>
            </div>
        </div>
    </div>
</div>