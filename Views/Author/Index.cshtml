
@model List<LibraryManagement.ViewModels.AuthorViewModel>
@{
    Layout = "_Layout";
}

<h1><i data-lucide="users"></i> Authors List</h1>

<!-- Search -->
<form asp-action="Index" method="get" style="margin-bottom: 1.5rem;" id="search-form">
    <div style="display: flex; align-items: center; gap: 8px;">
        <div style="position: relative; flex: 0 0 300px; height: 42px; display: flex; align-items: center;">
            <i data-lucide="search" style="position: absolute; left: 14px; color: #6b7280; width: 18px; height: 18px; pointer-events: none; z-index: 1;"></i>
            <input type="text"
                   name="search"
                   placeholder="Search by author name"
                   value="@ViewBag.Search"
                   style="padding: 0 14px 0 42px; border-radius: 6px; border: 1px solid #4b5563; background-color: #1f2937; color: #f9fafb; width: 100%; height: 100%; box-sizing: border-box; font-size: 14px; line-height: 42px;" />
        </div>
        <button type="submit" class="btn btn-outline" style="height: 42px; line-height: 1;">Search</button>
    </div>
</form>

<!-- Table -->
<div class="markdown-table-container">
    <table class="markdown-table">
        <thead>
            <tr>
                <th>Author Name</th>
                <th>Books Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.Name</td>
                    <td>
                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "Controller", "Author" },
                            { "ActionName", "BooksByAuthor" },
                            { "RouteId", author.AuthorId.ToString() },
                            { "RouteParamName", "authorId" },
                            { "StyleType", "table-secondary" },
                            { "Color", "blue" },
                            { "Text", author.BookCount.ToString() }
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
