@model List<LibraryManagement.ViewModels.AuthorViewModel>
@{
    Layout = "_Layout";
}

<h1><i data-lucide="users"></i> Authors List</h1>

<!-- Search -->
<form asp-action="Index" method="get" style="margin-bottom: 1.5rem;">
    <div style="display: flex; align-items: center; gap: 8px;">
        <i data-lucide="search" style="color: #6b7280;"></i>
        <input type="text"
               name="search"
               placeholder="Search by author name"
               value="@ViewBag.Search"
               style="padding: 8px 14px; border-radius: 6px; border: 1px solid #4b5563; background-color: #1f2937; color: #f9fafb; width: 300px;" />
        <button type="submit" class="btn btn-outline"><i data-lucide="search"></i> Search</button>
    </div>
</form>

<!-- Table -->
<div class="markdown-table-container">
    <table class="markdown-table">
        <thead>
            <tr>
                <th>Author Name</th>
                <th>Books Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var author in Model)
            {
                <tr>
                    <td>@author.Name</td>
                    <td>
                        <a asp-controller="Author"
                           asp-action="BooksByAuthor"
                           asp-route-authorId="@author.AuthorId"
                           class="btn btn-blue">
                           @author.BookCount
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>