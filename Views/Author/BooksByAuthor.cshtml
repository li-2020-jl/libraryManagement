@model List<LibraryManagement.ViewModels.BookViewModel>
@{
    Layout = "_Layout";
}

<h1><i data-lucide="book-open"></i> Books by @ViewBag.AuthorName</h1>

<div class="markdown-table-container">
    <table class="markdown-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Library Branch</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.LibraryBranchName</td>
                    <td>
                        @if (string.IsNullOrEmpty(book.CustomerId))
                        {
                            <span class="status-available">
                                <i data-lucide="check-circle"></i> Available
                            </span>
                        }
                        else
                        {
                            <span class="status-checked-out">
                                <i data-lucide="clock"></i> Checked out by @book.BorrowerName
                            </span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
{
    { "Url", "/Author" },
    { "Icon", "arrow-left" },
    { "Color", "secondary" },
    { "Text", "Back to Authors List" }
})