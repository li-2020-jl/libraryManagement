@model List<LibraryManagement.ViewModels.LibraryBranchViewModel>
@{
    Layout = "_Layout";
}

<h1><i data-lucide="building-2"></i> Library Branches</h1>

<!-- Search -->
<form asp-action="Index" method="get" style="margin-bottom: 1.5rem;">
    <div style="display: flex; align-items: stretch; gap: 8px;">
        <div style="position: relative; flex: 0 0 300px;">
            <i data-lucide="search" style="position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #6b7280; width: 18px; height: 18px;"></i>
            <input type="text"
                   name="search"
                   placeholder="Search by branch name"
                   value="@ViewBag.Search"
                   style="padding: 8px 14px 8px 40px; border-radius: 6px; border: 1px solid #4b5563; background-color: #1f2937; color: #f9fafb; width: 100%; height: 38px; box-sizing: border-box;" />
        </div>
        <button type="submit" class="btn btn-outline" style="height: 38px;">Search</button>
    </div>
</form>

<!-- Add Button Section -->
<a asp-action="Create" class="btn btn-secondary" style="margin-bottom: 1rem;"><i data-lucide="plus-circle"></i> Add New Branch</a>

<!-- Table Section -->
<div class="markdown-table-container">
    <table class="markdown-table">
        <thead>
            <tr>
                <th style="width: 20%;">Branch ID</th>
                <th style="width: 50%;">Branch Name</th>
                <th style="width: 30%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model)
            {
                <tr>
                    <td>@branch.LibraryBranchId</td>
                    <td>@branch.BranchName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@branch.LibraryBranchId" class="btn btn-blue"><i data-lucide="edit"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@branch.LibraryBranchId" class="btn btn-danger"><i data-lucide="trash-2"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>