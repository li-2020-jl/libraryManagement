@model List<LibraryManagement.ViewModels.LibraryBranchViewModel>
@{
    Layout = "_Layout";
}

<h1><i data-lucide="building-2"></i> Library Branches</h1>

<!-- Search -->
<form asp-action="Index" method="get" style="margin-bottom: 1.5rem;" id="search-form">
    <div style="display: flex; align-items: center; gap: 8px;">
        <div style="position: relative; flex: 0 0 300px; height: 42px; display: flex; align-items: center;">
            <i data-lucide="search" style="position: absolute; left: 14px; color: #6b7280; width: 18px; height: 18px; pointer-events: none; z-index: 1;"></i>
            <input type="text"
                   name="search"
                   placeholder="Search by branch name"
                   value="@ViewBag.Search"
                   style="padding: 0 14px 0 42px; border-radius: 6px; border: 1px solid #4b5563; background-color: #1f2937; color: #f9fafb; width: 100%; height: 100%; box-sizing: border-box; font-size: 14px; line-height: 42px;" />
        </div>
        <button type="submit" class="btn btn-outline" style="height: 42px; line-height: 1;">Search</button>
    </div>
</form>

<!-- Add Button Section -->
@await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
{
    { "ActionName", "Create" },
    { "Icon", "plus-circle" },
    { "Color", "secondary" },
    { "Text", "Add New Branch" },
    { "Style", "margin-bottom: 1rem;" }
})

<!-- Table Section -->
<div class="markdown-table-container">
    <table class="markdown-table">
        <thead>
            <tr>
                <th style="width: 20%;">Branch ID</th>
                <th style="width: 50%;">Branch Name</th>
                <th style="width: 30%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var branch in Model)
            {
                <tr>
                    <td>@branch.LibraryBranchId</td>
                    <td>@branch.BranchName</td>
                    <td>
                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "Icon", "edit" },
                            { "Text", "Edit" },
                            { "ActionName", "Edit" },
                            { "RouteId", branch.LibraryBranchId.ToString() },
                            { "StyleType", "table-primary" },
                            { "Color", "blue" }
                        })
                        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
                        {
                            { "Icon", "trash-2" },
                            { "Text", "Delete" },
                            { "ActionName", "Delete" },
                            { "RouteId", branch.LibraryBranchId.ToString() },
                            { "StyleType", "table-secondary" },
                            { "Color", "red" }
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>