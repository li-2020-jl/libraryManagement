@model List<LibraryManagement.ViewModels.LibraryBranchViewModel>
@{
    Layout = "_Layout";
}

<h1>üèõÔ∏è Library Branches</h1>

<!-- Search -->
<form asp-action="Index" method="get" style="margin-bottom: 1.5rem;">
    <input type="text"
           name="search"
           placeholder="üîç Search by branch name"
           value="@ViewBag.Search"
           style="padding: 8px 14px; border-radius: 6px; border: 1px solid #4b5563; background-color: #1f2937; color: #f9fafb; width: 300px;" />
    <button type="submit" class="btn btn-outline">Search</button>
</form>

<!-- Add Button Section -->
<div class="row" style="margin-top: 1.5rem;">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-secondary">‚ûï Add New Branch</a>
    </div>
</div>

<!-- Table Section -->
<div class="markdown-table-container">
    <div class="row">
        <div class="col-12">
            <table class="markdown-table">
                <thead>
                    <tr>
                        <th style="width: 20%;">Branch ID</th>
                        <th style="width: 50%;">Branch Name</th>
                        <th style="width: 30%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model)
                    {
                        <tr>
                            <td>@branch.LibraryBranchId</td>
                            <td>@branch.BranchName</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@branch.LibraryBranchId" class="btn btn-blue">Edit</a>
                                <a asp-action="Delete" asp-route-id="@branch.LibraryBranchId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>