@model LibraryManagement.ViewModels.LibraryBranchViewModel
@{
    Layout = "_Layout";
}

<h2><i data-lucide="alert-circle"></i> Delete Branch</h2>

<!-- warning message -->
<p class="error-message">
    <i data-lucide="alert-triangle"></i> Are you sure you want to delete this branch?
</p>

<!-- branch info -->
<div class="card" style="max-width: 500px; margin-top: 1.5rem;">
    <form asp-action="DeleteConfirmed"
          asp-controller="LibraryBranch"
          asp-route-id="@Model.LibraryBranchId"
          method="post">

        <input type="hidden" asp-for="LibraryBranchId" />

        <div style="margin-bottom: 1rem;">
            <label for="BranchName">Branch Name</label><br />
            <input asp-for="BranchName" type="text" readonly />
        </div>

        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
        {
            { "ButtonType", "submit" },
            { "Color", "danger" },
            { "Icon", "trash-2" },
            { "Text", "Yes, Delete" }
        })
        @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
        {
            { "Url", Url.Action("Index") },
            { "Color", "secondary" },
            { "Text", "Cancel" },
            { "Style", "margin-left: 0.75rem;" }
        })
    </form>
</div>