@model LibraryManagement.ViewModels.LibraryBranchViewModel
@{
    Layout = "_Layout";
}

<h2>Delete Branch</h2>

<!-- warning message -->
<p class="error-message">
    ðŸš¨ Are you sure you want to delete this branch? ðŸš¨
</p>

<!-- branch info -->
<div class="card" style="max-width: 500px; margin-top: 1.5rem;">
    <form asp-action="DeleteConfirmed"
          asp-controller="LibraryBranch"
          asp-route-id="@Model.LibraryBranchId"
          method="post">

        <input type="hidden" asp-for="LibraryBranchId" />

        <div style="margin-bottom: 1rem;">
            <label for="BranchName">Branch Name</label><br />
            <input asp-for="BranchName" type="text" readonly />
        </div>

        <button type="submit" class="btn btn-warning" style="color: white;">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary" style="margin-left: 0.75rem;">Cancel</a>
    </form>
</div>