@model LibraryManagement.ViewModels.LibraryBranchViewModel
@{
    Layout = "_Layout";
}

<h2><i data-lucide="plus-circle"></i> Add New Library Branch</h2>

<form asp-action="Create" method="post" style="max-width: 500px; margin-top: 1rem;">
    <div style="margin-bottom: 1rem;">
        <label for="BranchName">Branch Name</label><br />
        <input asp-for="BranchName" type="text" required />
    </div>

    <button type="submit" class="btn btn-blue">Save</button>
    <a asp-action="Index" class="btn btn-secondary" style="margin-left: 0.5rem;">Cancel</a>
</form>