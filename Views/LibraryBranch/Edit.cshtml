@model LibraryManagement.ViewModels.LibraryBranchViewModel
@{
    Layout = "_Layout";
}

<h2><i data-lucide="edit"></i> Edit Branch</h2>

<form asp-action="Edit" method="post" style="max-width: 500px; margin-top: 1rem;">
    <input type="hidden" asp-for="LibraryBranchId" />

    <div style="margin-bottom: 1rem;">
        <label for="BranchName">Branch Name</label><br />
        <input asp-for="BranchName" type="text" />
        <span asp-validation-for="BranchName" class="text-error"></span>
    </div>

    @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
    {
        { "ButtonType", "submit" },
        { "Icon", "check" },
        { "Color", "blue" },
        { "Text", "Save" }
    })
    @await Html.PartialAsync("Components/_ActionButton", null, new ViewDataDictionary(ViewData)
    {
        { "Url", Url.Action("Index") },
        { "Icon", "arrow-left" },
        { "Color", "secondary" },
        { "Text", "Cancel" },
        { "Style", "margin-left: 0.75rem;" }
    })
</form>